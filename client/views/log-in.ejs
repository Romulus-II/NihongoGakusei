    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js"></script>
  </head>
  <body>
    <h1>Log In</h1>

    <form>
      <input id="form-username" type="text" name="username" placeholder="Username"> <br>
      <input id="form-password" type="text" name="password" placeholder="Password"> <br>
      <input type="submit" name="Log In" />
    </form>
    <script>
      $(document).ready( function () {
        $('form').submit( function () {
          var form_data = $(this).serialize();
          $.ajax({
              type: "POST",
              url: "/login-request",
              data: form_data
          }).done(function(data) {
            // Handle action (User logged in, user not logged in)
            console.log(data.status);
          });
          console.log('We have submitted a form: ' + form_data);
          return false;
        });
      });
    </script>
  </body>
</html>
